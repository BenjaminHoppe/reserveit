<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<div class="card login_card">
<h1>Login</h1>

  <%= form_for :session, url: sessions_path do |f| %>
  <p>
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit "Login" %>
    
    <p class="browse">or <%= link_to restaurants_path do %><span class="browse-link">browse restaurants anonymously</span><% end %></p>
  </p>
  <% end %>
</div>
