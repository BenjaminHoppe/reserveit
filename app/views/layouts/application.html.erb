<!DOCTYPE html>
<html>
<head>
  <title>ReserveIt</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:300,400" rel="stylesheet">
      <link href="https://fonts.googleapis.com/css?family=Aleo" rel="stylesheet">
      <% favicon_link_tag 'favicon.ico' %>
</head>
<body>

  <header>
  
    <div class="branding">
      <%= link_to restaurants_path do %>
        <span class="logo">
          <%=image_tag('reserve-it-path-white.svg', class: "logo_svg") %>
        </span>
      <% end %>
    </div>

    <nav class="nav">

      <% if current_user %>
        <span class="greeting">Hello, <%=current_user.name%> |</span>
        <div class="branding">
          <%= link_to users_path do %>
            <%=image_tag('user.svg', class: "user_icon") %>
            Profile
          <% end %> 
        </div> | 
        <div class="branding">
          <%= link_to sessions_path('0'), :method => :delete do %>
            <%=image_tag('logout.svg', class: "user_icon") %>
            Log out
          <% end %>
      <%else%>
          <%= link_to new_sessions_path do %>
            <%=image_tag('user.svg', class: "user_icon") %>
            Log in
          <% end %> 
        <%=image_tag('new-user.svg', class: "user_icon") %>
        <%= link_to "Sign up", new_user_path%>
      <%end%>
    </nav>

  </header>

  <main>
    <%= yield %>
  </main>

  <footer>
  </footer>
</body>
</html>
