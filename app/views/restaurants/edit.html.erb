<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
<div class="card new_restaurant_card">
<h1>Edit restaurant</h1>
  <%= render 'restaurant_form', restaurant: @restaurant %>

  <%= link_to "/restaurants/#{@restaurant.id}", method: :delete, data: {confirm: "Are you sure you want to delete your restaurant?"} do %>
    <span class="link_button delete_button">
      <%=image_tag('rubbish-bin', class: "svg") %>
      Delete Restaurant
    </span>
  <%end%>



</div>
